{
	// * Start --> VS Code Awesome

	// TODO:  Set Better Defaults
	"editor.copyWithSyntaxHighlighting": false,
	"editor.emptySelectionClipboard": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.snippetSuggestions": "top",
	"editor.detectIndentation": false,

	"editor.cursorBlinking": "smooth",
	"editor.cursorStyle": "line",

	"diffEditor.ignoreTrimWhitespace": false,

	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,

	"window.newWindowDimensions": "inherit",
	"workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": false,
	"workbench.sideBar.location": "right",
	"editor.minimap.enabled": false,
	"breadcrumbs.enabled": false,
	"workbench.startupEditor": "none",
	"workbench.layoutControl.type": "menu",

	// TODO: Silence the noise
	"editor.hover.enabled": true,
	"editor.selectionHighlight": false,
	"editor.renderLineHighlight": "line",
	"editor.occurrencesHighlight": true,

	// TODO:  console.log
	"turboConsoleLog.logMessagePrefix": "ðŸš€",
	"turboConsoleLog.includeFileNameAndLineNum": false,
	"turboConsoleLog.delimiterInsideMessage": "~",

	// TODO:  Javascript
	"javascript.format.enable": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"javascript.preferences.quoteStyle": "single",
	"javascript.autoClosingTags": true,

	// TODO:  Prettier
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,

	// TODO: TitleBar & editorGroupHeader

	"window.titleBarStyle": "custom",
	"workbench.colorCustomizations": {
		"editorGroupHeader.noTabsBackground": "#ff000000"
	},

	// TODO: Import Custom Css
	"vscode_custom_css.imports": ["file:///Users/anexbm/Documents/vsCode.css"],

	// *  End --> VS Code Awesome

	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"files.autoSave": "onFocusChange",
	"terminal.integrated.shell.osx": "/bin/zsh",
	"explorer.confirmDelete": true,
	"explorer.confirmDragAndDrop": false,
	"workbench.iconTheme": "material-icon-theme",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[css]": {
		"editor.defaultFormatter": "aeschli.vscode-css-formatter"
	},
	"[xml]": {
		"editor.autoClosingBrackets": "never",
		"files.trimFinalNewlines": true,
		"files.trimTrailingWhitespace": false
	},
	"javascript.updateImportsOnFileMove.enabled": "always",
	"html.format.wrapLineLength": 70,
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.tabWidth": 4,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.accessibilitySupport": "off",
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"liveServer.settings.AdvanceCustomBrowserCmdLine": "",
	"html.format.wrapAttributes": "force-aligned",
	"redhat.telemetry.enabled": true,
	"liveServer.settings.donotShowInfoMsg": true,
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.fontWeight": "400",
	"git.ignoreMissingGitWarning": true,
	"codesnap.containerPadding": "0.5em",
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.guides.indentation": false,
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showConstructors": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showEnums": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showInterfaces": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showModules": false,
	"breadcrumbs.showNamespaces": false,
	"breadcrumbs.showNull": false,
	"breadcrumbs.showNumbers": false,
	"breadcrumbs.showObjects": false,
	"breadcrumbs.showOperators": false,
	"breadcrumbs.showPackages": false,
	"breadcrumbs.showProperties": false,
	"breadcrumbs.showStrings": false,
	"breadcrumbs.showStructs": false,
	"breadcrumbs.showTypeParameters": false,
	"breadcrumbs.showVariables": false,
	"terminal.integrated.gpuAcceleration": "off",
    "workbench.activityBar.visible": false,
    "window.zoomLevel": 2,
    "editor.linkedEditing": true,
    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "workbench.colorTheme": "Default Dark+",
    "workbench.statusBar.visible": false

